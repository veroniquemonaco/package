{% extends 'layout_admin.html.twig' %}

{% block contentAdmincontent %}
    <div class="container container-index-admin">
        <h1>Liste des tailles</h1>

        <table class="table-bordered table-index">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for taille in tailles %}
                <tr>
                    <td><a href="{{ path('taille_show', { 'id': taille.id }) }}">{{ taille.id }}</a></td>
                    <td>{{ taille.name }}</td>
                    <td>
                        <a href="{{ path('taille_edit', { 'id': taille.id }) }}" class="btn btn-default">
                            <span class="glyphicon glyphicon-pencil"></span>Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('taille_new') }}">Cr√©er une nouvelle taille</a>
            </li>
        </ul>
    </div>
{% endblock %}
